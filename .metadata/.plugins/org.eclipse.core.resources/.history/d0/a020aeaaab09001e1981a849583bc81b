/* 뒤집기 */

.flip {
    perspective: 1000px; /* 3D 효과를 위한 perspective 설정 */
}

.flip:hover .col-front {
    transform: rotateY(-180deg); /* col-front를 -180도 회전시킴 */
}

.flip:hover .col-back {
    transform: rotateY(0deg); /* col-back을 초기 상태로 되돌림 */
}

.col {
    position: absolute;
    width: 275px;
    height: 430px;
    backface-visibility: hidden; /* 뒷면 요소는 보이지 않도록 함 */
    transition: transform 0.6s; /* 호버 효과에 애니메이션을 적용 */
}

.col-front {
    transform: rotateY(0deg);
}

.col-back {
    transform: rotateY(180deg);
    display: none; /* 초기에는 숨겨놓음 */
}

.flip:hover .col-front {
    display: none; /* col-front를 숨김 */
}

.flip:hover .col-back {
    display: block; /* col-back을 보이도록 함 */
}

